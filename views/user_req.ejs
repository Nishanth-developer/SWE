<body>
    <form class="w-full max-w-sm" role="form" method="post" action="/user_wish" enctype="multipart/form-data">
                      
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="select_category">
              Select product category
            </label>
          </div>

          
        <label for="select_category" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400">Select an option</label>
        <select id="select_category" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
        <option value="cycles">cycles</option>
        <option value="beds">beds</option>
        <option value="electronics">electronics</option>
        <option value="others">others</option>
        </select>



        <div  style="display: none;">
          <input class="input_v" type="text" name="category_drop" value=""> 
        </div>

          <!-- <div class="md:w-2/3">
            <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" type="text" name="name" placeholder="Your name">
          </div>
        </div> -->

        <div class="md:flex md:items-center">
            <div class="md:w-1/3"></div>
            <div class="md:w-2/3">
              <button class="shadow bg-teal-400 hover:bg-teal-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded ml-20" type="submit">
                Done
              </button>
            </div>
          </div>

          </form>

          <script>
            const category_s = document.getElementById('select_category');
            category_s.addEventListener("change", show_det);
            
            function show_det(){
              const category_val = category_s.options[category_s.selectedIndex].text;
            var s1 = document.getElementsByClassName('input_v');
            s1[0].defaultValue = category_val;
            }
            
            
      
          </script>


          
          
